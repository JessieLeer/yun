.popup
	width: 100%
	max-width: 750px
	z-index: 2
	
.mint-popup
	border-top-left-radius: 0px
	border-top-right-radius: 0px
	
.pop-wrapper
	padding: 10px
	
.pop-header
	margin-bottom: 6px
	font-size: 16px	
	
.color-7a7a7a
	color: #7a7a7a
	
.lotnum-area
	height: 300px
	overflow: auto
	
.lotnum-wrapper
	display: flex	
	padding-top: 15px
	padding-bottom: 15px
	
.lotnum
	margin-right: 20px
	padding-left: 5px
	padding-right: 5px
	width: 140px
	
.lotnum-def
	background-color: #f5f5f5
	border: #f5f5f5 solid 1px
	
.lotnum-cur
	background-color: #FEF0F0
	color: #E43A3D
	border: #E43A3D solid 1px
	
.count-wrapper
	flex: 1
	
.count-opera
	font-size: 20px
	
.count-count
	width: 50px
	border: none
	font-size: 16px

.mt-10
	margin-top: 10px
	
.pop-btn
	width: 50%
	float: left
	border-radius: 0
	height: 40px
	line-height: 40px
	
.pop-btn-sure
	background: linear-gradient(-90deg,rgba(255,121,90,1),rgba(228,58,61,1))
	
.bread
	height: 40px
	line-height: 40px
	
.bread dl
	width: 32%
	
.color-E43A3D
	color: #E43A3D
	
.portnav
	position: fixed
	bottom: 20px
	height: 40px
	line-height: 40px
	background: rgba(0,0,0,1)
	opacity: 0.7
	border-radius: 5px
	
.portnav .iconfont
	color: white
	font-size: 20px
	padding-left: 10px
	padding-right: 10px
	border-right: white solid 1px
	position: relative
	top: -3px
	
.badge
	position: absolute
	top: -10px
	left: 24px
	height: 14px
	line-height: 14px
	font-size: 10px
	padding-left: 2px
	padding-right: 2px	
	
.price-input,.price-input input
	background-color: #F7F9FA
	padding-left: 10px
	margin-left: -10px
	margin-right: -10px
	
.sure
	background-color: white
	border: #eee solid 1px
	margin-right: 10px
	margin-left: 20px
	border-radius: 0
	
.medicine-name
	font-size: 16px	
	
.mint-cell:last-child
	background-size: 100% 0