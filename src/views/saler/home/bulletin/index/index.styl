.inner-main
	min-height: 100%
	padding-top: 30px
	background-color: #f5f5f5
	padding-bottom: 60px

.header
	background-color: #EAEAEA
	color: #333
	display: flex
	position: fixed
	top: 0
	margin: 0 auto
	width: 100%
	max-width: 750px
	z-index: 9

.news
	padding-inline-start: 0
	
.new
	list-style: none
	background-color: white
	padding: 10px
	margin-block-start: 0em
	margin-block-end: 0em
	margin: 10px
	
.new-header
	display: flex
	border-bottom: #f5f5f5 solid 1px
	padding-bottom: 8px
	
.new-time
	width: 140px
	
.new-type
	flex: 1
	margin-block-start: 0em
	margin-block-end: 0em
	font-size: 16px
	
.new-title,.new-con
	margin-block-start: 0em
	margin-block-end: 0em
	
.new-title
	line-height: 30px
	margin-top: 5px