.inner-main
	min-height: 100%
	padding-top: 60px
	background-color: #f5f5f5
	padding-bottom: 60px

.header
	background-color: #EAEAEA
	color: #333
	display: flex
	padding-top: 10px
	padding-bottom: 10px
	line-height: 40px
	position: fixed
	top: 0
	margin: 0 auto
	width: 100%
	max-width: 750px
	z-index: 9

.search
	flex: 1
	margin-left: 10px
	color: #b3b3b3
	
.mint-cell
	min-height: 40px
	
.login
	color: #E43A3D
	width: 60px
	
.mr-10
	margin-right: 10px
	
.mint-swipe	
	height: 376px
	
.nav
	background-color: white
	padding-top: 15px
	padding-bottom: 15px
	
.nav-item
	width: 25%
	color: #333
	
.nav-item .iconfont
	font-size: 24px
	color: #f54100
	
.notice
	display: flex
	background-color: #FFF6EE
	padding-top: 10px
	padding-bottom: 10px
	
.notice-index
	width: 80px
	margin-left: 10px
	line-height: 30px
	
.seamless-warp
	flex: 1
	height: 30px
	overflow: hidden
	margin-right: 10px
	
.notice-item
	height: 30px
	line-height: 30px	
	width: 100%
	color: #666
	white-space: normal
	text-overflow: ellipsis

.hot-title
	font-size: 16px
	font-family: MicrosoftYaHei
	font-weight: 400
	color: rgba(51,51,51,1)
	
.hots
	margin-block-start: 0
	margin-block-end: 0
	padding-inline-start: 0
	
.hot
	background-color: white
	padding: 10px
	margin-left: 5px
	margin-right: 5px
	margin-bottom: 10px
	width: calc((100% - 80px)/2)
	
.hot-image
	width: 100%
	
.hot-name
	margin-block-start: 0em
	margin-block-end: 0em
	color: #333
	margin-bottom: 5px
	
.hot-badge
	color: #b3b3b3
	
.hot-sold
	margin-top: 5px
	color: #E43A3D
	
.nomore
	color: #C9CAD3