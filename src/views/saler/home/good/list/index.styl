.inner-main
	min-height: 100%
	padding-top: 60px

.header
	background-color: #EAEAEA
	color: #333
	display: flex
	padding-top: 10px
	padding-bottom: 10px
	line-height: 40px
	position: fixed
	top: 0
	margin: 0 auto
	width: 100%
	max-width: 750px
	z-index: 9

.back
	width: 30px
	background: none
	height: 32px
	
.search
	flex: 1
	margin-left: 10px
	margin-right: 10px
	color: #b3b3b3
	
.mint-search
	height: auto
	
.mint-search .mint-searchbar
	padding: 0
	
.order-wrapper
	display: flex
	padding: 10px 10px
	background-color: white
	border-top: #f5f5f5 solid 1px
	
	
.order-image
	width: 94px
	margin-right: 10px
	
.order-info
	flex: 1
	
.order-title
	margin-block-start: 0em
	margin-block-end: 0em
	margin-bottom: 6px
	
.order-bread
	color: #B3B3B3
	margin-block-start: 0em
	margin-block-end: 0em
	
.color-grey
	color: #D3D3D3