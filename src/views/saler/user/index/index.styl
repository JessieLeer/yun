.g-hd
	media-backimage('../../../../assets/image/brg','png')
	background-repeat: no-repeat
	background-size: 100% 100%
	width: 100%
	height: 100%
	color: white
	padding-top: 20px
	padding-bottom: 30px
	
.mint-cell
	background: none
	
.avatar
	border-radius: 100%

.money
	padding-left: 10px
	margin-bottom: 30px
	dt
		font-weight: 400
		line-height: 35px
		opacity: 0.6
	dd
		font-size: 33px
		font-weight: 400
		
.notice
	display: block
	padding-left: 10px
	background: rgba(245,245,245,0.1)
	height: 30px
	line-height: 30px
	position: absolute
	bottom: 0
	width: 100%
	
.score
	font-size: 20px
	font-weight: 400
	color: #FF5344
	position: relative
	top: 2px
	
.score-rule
	height: 25px
	background: linear-gradient(0deg,rgba(255,121,90,1),rgba(228,58,61,1))
	border-radius: 25px
	
.bg-white
	background-color: white
	
.mt-8
	margin-top: 8px

.mb-8
	margin-bottom: 8px
	
.user-icon
	position: relative
	top: -1px