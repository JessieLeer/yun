.inner-main
	height: 100%
	padding-top: 96px

.header
	background-color: #EAEAEA
	color: #333
	height: 40px
	line-height: 40px
	
.mint-search
	height: auto
	
.mint-cell
	min-height: 40px	
	
.search
	position: fixed
	z-index: 10
	top: 40px
	margin: 0 auto
	width: 100%
	max-width: 750px
	
.portnav
	position: fixed
	bottom: 20px
	height: 40px
	line-height: 40px
	background: rgba(0,0,0,1)
	opacity: 0.7
	border-radius: 5px
	
.portnav .iconfont
	color: white
	font-size: 20px
	padding-left: 10px
	padding-right: 10px
	border-right: white solid 1px
	position: relative
	top: -3px
	
.badge
	position: absolute
	top: -10px
	left: 24px
	height: 14px
	line-height: 14px
	font-size: 10px
	padding-left: 2px
	padding-right: 2px
	width: 14px
	
.bg-grey
	background-color: #f5f5f5
	
.order-wrapper
	display: flex
	padding: 10px 10px
	background-color: white
	border-top: #f5f5f5 solid 1px
	
.check
	margin-top: 30px
	margin-right: 10px
	
.order-image
	width: 100px
	margin-right: 10px
	
.order-info
	flex: 1
	
.order-title
	margin-block-start: 0em
	margin-block-end: 0em
	margin-bottom: 6px
	margin-top: 6px
	
.order-bread
	color: #B3B3B3
	margin-block-start: 0em
	margin-block-end: 0em
	
p
	margin-block-start: 0em
	margin-block-end: 0em	
	
.price
	background-color: #f5f5f5
	height: 24px
	line-height: 24px
	
.price-now
	color: #E43A3D
	margin-left: 10px
	margin-right: 20px
	
.price-old
	color: #b3b3b3
	margin-right: 20px
	text-decoration: line-through
	
.color-grey
	color: #D3D3D3
	
.remark
	color: #333	
	
.mr-30
	margin-right: 30px
	
.order-dd
	color: #333
	
.mt-6
	margin-top: 6px
	
.mb-6
	margin-bottom: 6px
	
.opera
	height: 14px
	line-height: 14px
	color: #FF6354
	margin-top: 4px
	
.add
	position: absolute
	right: 0
	font-size: 20px
	border: #FF6354 solid 1px
	border-radius: 100%
	
.nomore
	color: #C9CAD3
	margin: 15px auto
	
p
	margin-block-start: 0em
	margin-block-end: 0em		
	