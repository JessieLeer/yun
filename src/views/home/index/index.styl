	width: 60px
	
.user
	color: #E43A3D
	width: 40px
	
.mr-10
	margin-right: 10px
	
.mint-swipe	
	height: 310px
	
.nav
	padding-top: 15px
	padding-bottom: 15px
	
.nav-item
	width: 33%
	color: #333
	
.nav-item .iconfont
	font-size: 24px
	color: #f54100
	
.notice
	display: flex
	background-color: #FFF6EE
	padding-top: 10px
	padding-bottom: 10px
	
.notice-index
	width: 80px
	margin-left: 10px
	line-height: 30px
	
.banner
	border-radius: 5px
	margin: 0 auto
	
.seamless-warp
	flex: 1
	height: 30px
	overflow: hidden
	margin-right: 10px
	
.notice-item
	height: 30px
	line-height: 30px	
	width: 100%
	color: #666
	white-space: normal
	text-overflow: ellipsis

.hot-title
	font-size: 16px
	font-family: MicrosoftYaHei
	font-weight: 400
	color: rgba(51,51,51,1)
	
.hots
	margin-block-start: 0
	margin-block-end: 0
	padding-inline-start: 0
	
.hot
	background-color: white
	padding: 5px
