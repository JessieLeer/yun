.inner-main
	min-height: 100%
	padding-top: 60px
	background-color: #f5f5f5
	
.g-header
	background:linear-gradient(0deg,rgba(255,255,255,1),rgba(234,234,234,1))

.header
	background-color: #eaeaea
	color: #333
	display: flex
	padding-top: 10px
	padding-bottom: 10px
	line-height: 40px
	position: fixed
	top: 0
	margin: 0 auto
	width: 100%
	max-width: 750px
	z-index: 9

.search
	flex: 1
	margin-left: 10px
	color: #b3b3b3
	
.mint-cell
	min-height: 40px
	
.login
