.inner-main
	padding-top: 40px
	padding-bottom: 100px

.header
	background-color: #EAEAEA
	color: #333
	height: 40px
	line-height: 40px
	position: fixed
	top: 0
	left: 0
	width: 100%
	margin: 0 auto
	z-index: 8
	
.order
	margin-top: 10px
	
.mt-10
	margin-top: 10px
	
.mt-30
	margin-top: 30px
	
.shopcar-cell
	margin-bottom: 10px
	
.popup
	width: 100%
	max-width: 750px

.order-wrapper
	display: flex
	padding: 10px 10px
	background-color: white
	border-top: #f5f5f5 solid 1px
	
.check
	margin-top: 30px
	margin-right: 10px
	
.order-image
	width: 75px
	margin-right: 10px
	
.order-info
	flex: 1
	
.order-title
	margin-block-start: 0em
	margin-block-end: 0em
	margin-bottom: 6px
	
.order-bread
	color: #B3B3B3
	line-height: 22px
	margin-block-start: 0em
	margin-block-end: 0em
	
.price
	background-color: #f5f5f5
	height: 24px
	line-height: 24px
	
.price-now
	color: #E43A3D
	margin-left: 10px
	margin-right: 20px
	
.price-now span
	font-size: 16px
	
.price-old
	color: #aaa
	margin-right: 20px
	text-decoration: line-through
	
.color-grey
	color: #D3D3D3
	
.remark
	color: #333
	
.offer
	color: #E43A3D
	border: #E43A3D solid 1px
	border-radius: 100%
	width: 16px
	height: 16px
	line-height: 16px
	margin-right: 10px
	
.amount
	flex: 1
	
.footer
	display: flex
	line-height: 50px
	height: 50px
	position: fixed
	bottom: 55px
	width: 100%
	max-width: 750px
	margin: 0 auto
	background-color: white
	border-top: #eee solid 1px
	
.sub
	width: 100px
	height: 50px
	border-radius: 0
	color: white
	background: linear-gradient(-61deg,rgba(255,122,110,1),rgba(228,58,61,1))
	
.suber
	width: 100%
	height: 50px
	border-radius: 0
	color: white
	background: linear-gradient(-61deg,rgba(255,122,110,1),rgba(228,58,61,1))
	