.inner-main
	min-height: 100%
	padding-top: 60px
	
.order-wrapper
	display: flex
	padding: 10px 10px
	background-color: white
	border-top: #f5f5f5 solid 1px
	
.order-image
	width: 100px
	margin-right: 10px
	
.order-info
	flex: 1
	
.order-title
	margin-block-start: 0em
	margin-block-end: 0em
	margin-bottom: 2px
	margin-top: 4px
	
.order-bread
	color: #B3B3B3
	margin-block-start: 0em
	margin-block-end: 0em
	
.color-grey
	color: #D3D3D3
	
.ml-10
	margin-left: 10px
	
.add
	position: absolute
	right: 0
	font-size: 20px
	border: #FF6354 solid 1px
	border-radius: 100%
	height: 14px
	line-height: 14px
	color: #FF6354
	margin-top: 4px
	
.popup
	width: 100%
	max-width: 750px
	
.mint-popup
	border-top-left-radius: 5px
	border-top-right-radius: 5px
	
.pop-wrapper
	padding: 10px
	
.pop-header
	margin-bottom: 6px
	font-size: 16px	
	
.color-7a7a7a
	color: #7a7a7a
	
.lotnum-area
	height: 300px
	overflow: auto
	
.lotnum-wrapper
	display: flex	
	padding-top: 15px
	padding-bottom: 15px
	
.lotnum
	margin-right: 20px
	border-radius: 3px
	padding-left: 5px
	padding-right: 5px
	width: 140px
	
.lotnum-def
	background-color: #f5f5f5
	border: #f5f5f5 solid 1px
	
.lotnum-cur
	background-color: #FEF0F0
	color: #E43A3D
	border: #E43A3D solid 1px
	
.count-wrapper
	flex: 1
	
.count-opera
	font-size: 20px
	
.count-count
	width: 50px
	border: none
	font-size: 16px

.mt-10
	margin-top: 10px
	
.pop-btn
	width: 50%
	float: left
	border-radius: 0
	height: 40px
	line-height: 40px
	
.pop-btn-sure
	background: linear-gradient(-90deg,rgba(255,121,90,1),rgba(228,58,61,1))
	
.bread
	height: 40px
	line-height: 40px
	
.bread dl
	width: 32%
	
.color-E43A3D
	color: #E43A3D
	
.opera
	height: 14px
	line-height: 14px
	color: #FF6354
	margin-top: 6px
	z-index: 5
	
.price-input,.price-input input
	background-color: #F7F9FA
	padding-left: 10px
	margin-left: -10px
	margin-right: -10px
	
.sure
	background-color: white
	border: #eee solid 1px
	margin-right: 10px
	
.medicine-name
	font-size: 16px
	
.nomore
	color: #C9CAD3
	
.search-result-wrapper
	position: fixed
	z-index: 8
